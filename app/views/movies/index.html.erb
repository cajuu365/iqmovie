<div class="bg-fixed md:overflow-hidden" style="background-image: url(assets/cover-page.jpeg)">
  <div class="px-4 py-32 md:py-4 lg:py-10">
    <div class="md:max-w-6xl md:mx-auto lg:px-56">
      <div class="md:flex md:flex-wrap">
        <div class="md:w-full text-center md:p-16 lg:px-40 lg:py-10 lg:text-center">
          <% if user_signed_in? %>
            <h1 class="font-bold text-white text-2xl md:text-5xl leading-tight mb-4">
              Welcome <%= current_user.email %>
            </h1>
          <%end%>
          <p class="text-white md:text-xl lg:px-1">
            My movie list
          </p>
          <%= form_tag "/search/create", method: :get, remote: true do %>
            <%= text_field_tag :name, nil, placeholder: "Search Movies", class: "shadow appearance-none border rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mt-4 text-center" %>
              <%= content_tag :button, class: "bg-white hover:bg-red-600 hover:bg-white text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-4", type: :submit do %>
                Search in my list
              <%end%>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>


<div id="resultados">
</div>


