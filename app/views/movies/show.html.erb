<div class="container mx-auto text-white">
  <div class="w-full pr-2 pl-2 md:pr-56 md:pl-56 lg:pl-56 lg:pr56 pt-0 pb-2 rounded overflow-hidden shadow-lg">
    <div class="px-6 py-4">
      <div class="font-bold text-white text-center text-x1 mb-2">
        <h5><%= @movie.title %></h5>
        <% unless @movie.user.nil? %>
          <p>
            Movie added by: <%=@movie.user.email %>
          </p>
        <%end%>
      </div>
      <%= image_tag("cover-page.jpeg", :class => "w-full md:w-full lg:w-full") %>
      <%= link_to @movie.poster_url, @movie, class: "w-full md:w-full lg:w-full" %>
      <p class="text-base">
        <%= @movie.summary %>
      </p>
      <p>
        <%= @movie.release_date %>
      </p>
    </div>
    <div class="px-6 py-4">
      <span class="inline-block bg-white text-black rounded-full px-3 py-1 text-sm font-semibold mr-2"><%= @movie.vote_counting %></span>
    </div>
    <div class="text-center">
      <%= link_to "Eliminar", @movie, method: :delete, class:"bg-white hover:bg-red text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-4" %>
      <%= link_to "Editar", edit_movie_path(@movie), class:"bg-white hover:bg-red text-black font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-4" %>   
    </div>

  </div>
</div>

