<div class="container mx-auto">
  <div class="text-white w-full pr-2 pl-2 md:pr-56 md:pl-56 lg:pl-56 lg:pr56 pt-0 pb-2 rounded overflow-hidden shadow-lg">
    <%= form_for(@movie) do |f| %>
      <% name ||= "Crear" %>
      <h3 class="text-center p-5"><%= name %></h3>
        <% @movie.errors.full_messages.each do |message| %>
          <label class="bg-red-600"><%= message %></label>
        <%end%>
        <form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          <div class="mb-4">
            <h3 class="block text-sm font-bold mb-2">Title ​of​ ​the​ movie</h3>
            <%= f.text_field :title, placeholder: "Title ​of​ ​the​ movie", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="mb-6">
            <h3 class="block text-sm font-bold mb-2">Movie overview</h3>
            <%= f.text_area :summary, placeholder: "Movie overview", class: "shadow appearance-none border border-red-600 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="mb-6">
            <h3 class="block text-sm font-bold mb-2">Vote count</h3>
            <%= f.number_field :vote_counting, placeholder: "Vote count", class: "shadow appearance-none border border-red-600 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="mb-6">
            <h3 class="block text-sm font-bold mb-2">Release date</h3>
            <%= f.date_field :release_date, placeholder: "Release date", class: "shadow appearance-none border border-red-600 rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
          </div>
          <div class="text-center pb-5">
            <%= f.submit "Save in my list", class: "bg-red-600 hover:bg-white hover:text-black text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          </div>
        </form>
    <% end %>
  </div>
</div>